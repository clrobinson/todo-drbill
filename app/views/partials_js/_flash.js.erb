$('.modal').each(function() { $(this).modal('hide'); });

var $flash = $('#flash-msg');
console.log('<%= msg %>');
$flash.html('<%= msg %>');
$flash.css('opacity', 1).css('z-index', 1);
$flash.stop().animate(
  {opacity: 0}, 
  7000,
  function() {
    $flash.css('z-index', -1);
    $flash.html('');
  }
);
